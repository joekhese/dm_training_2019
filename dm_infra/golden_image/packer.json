{
  "_comment" : "Base AMI: XXXXX ",
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY`}}",
    "dest_ami_name": "golden_image",
    "aws_region": "eu-west-1",
    "version": "-1.0.0",
    "source_ami_id": ""
  },

  "builders": [{
    "ami_name": "{{user `dest_ami_name`}}{{ user `version`}x}",
    "ami_description": "CentOS7-Infra-AMI",
    "instance_type": "t2.medium",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters":
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*",
        "root-device-type": "ebs"
      },
      "owners": ["023451010066"],
      "most_recent": true
    },
    "launch_block_device_mappings": 
      {
      "device_name": "/dev/sda1",
      "volume_size": 100,
      "volume_type": "gp2",
      "delete_on_termination": true
      }
    ],
    "ssh_keypair_name": "xxx",
    "ssh_username": "centos",
    "ssh_keypair_name": "{user `ssh_keypair_name`}}",
    "ssh_private_key_file":"~/.ssh/xxx",
    "run_tags": {"Name": "deployer"},
    "tags": 
      "Release": "Latest",
      "Os": "centos",
      "environ": "test"
    }
  }],

  "provisioners": [
  {
    "type": "shell",
    "inline": [
      "xxxxxx",
    ]
  },
  {
    "type": "ansible-local",
    "playbook_file": "golden_image/base_configs/play.yml"
  },
 
}

